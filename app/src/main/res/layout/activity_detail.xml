<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              xmlns:toggle="http://schemas.android.com/apk/res-auto"
              android:orientation="vertical">

    <include
        android:id="@+id/business_toolbar"
        layout="@layout/toolbar"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"

        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout

                android:id="@+id/title_bg_layout"
                android:layout_width="fill_parent"
                android:layout_height="@dimen/activity_addmeeting_height"
                android:orientation="horizontal">


                <TextView
                    style="@style/MyTextStyle"
                    android:layout_width="@dimen/activity_addmeeting_text_wideth"
                    android:layout_height="wrap_content"
                    android:text="日程主题"
                    />

                <EditText
                    android:id="@+id/title_calender_content_et"
                    android:layout_width="fill_parent"
                    android:layout_height="@dimen/activity_addmeeting_height"
                    android:background="@color/white"
                    android:hint="请输入"
                    android:paddingLeft="@dimen/fab_margin"
                    android:textSize="@dimen/normalTextSize"
                    />
            </LinearLayout>

            <LinearLayout

                android:layout_width="fill_parent"
                android:layout_height="@dimen/activity_addmeeting_height"
                android:layout_marginTop="2dp"
                android:orientation="horizontal">


                <TextView
                    style="@style/MyTextStyle"
                    android:layout_width="@dimen/activity_addmeeting_text_wideth"
                    android:layout_height="wrap_content"
                    android:text="进行地址"
                    />

                <EditText
                    android:id="@+id/title_calender_address_et"
                    android:layout_width="fill_parent"
                    android:layout_height="@dimen/activity_addmeeting_height"
                    android:background="@color/white"
                    android:hint="请输入"
                    android:paddingLeft="@dimen/fab_margin"
                    android:textSize="@dimen/normalTextSize"
                    />
            </LinearLayout>





            <LinearLayout

                android:layout_width="fill_parent"
                android:layout_height="@dimen/activity_addmeeting_height"
                android:orientation="horizontal"
                android:layout_marginTop="2dp"
                >


                <TextView
                    style="@style/MyTextStyle"
                    android:layout_width="@dimen/activity_addmeeting_text_wideth"
                    android:layout_height="wrap_content"
                    android:text="登录人"
                    />

                <TextView
                    android:id="@+id/title_meetcount_constitutor_et"
                    android:layout_width="fill_parent"
                    android:layout_height="@dimen/activity_addmeeting_height"
                    android:background="@color/white"
                    android:gravity="center_vertical"
                    android:paddingLeft="@dimen/fab_margin"
                    android:text="某某"
                    android:textSize="@dimen/normalTextSize"
                    />
            </LinearLayout>






        </LinearLayout>
    </ScrollView>

</LinearLayout>
