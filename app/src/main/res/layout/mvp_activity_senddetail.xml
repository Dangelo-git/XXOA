<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/activity_frist_normal_bg"
                android:orientation="vertical">

    <include
        android:id="@+id/toolbar"
        layout="@layout/toolbar_new"
        />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/toolbar">


        <LinearLayout
            style="@style/SettingItemLayoutStyle"
            android:layout_height="wrap_content"
            android:layout_below="@+id/toolbar"
            android:layout_marginTop="@dimen/dp_10"
            android:orientation="vertical"
            >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/activity_register_height"
                    android:orientation="horizontal"
                    android:paddingLeft="@dimen/dp_20"
                    android:paddingRight="@dimen/dp_20">

                    <TextView
                        android:layout_width="@dimen/detail_tv_head_width"
                        android:layout_height="wrap_content"
                        android:singleLine="true"
                        android:text="紧急程度"
                        android:textColor="@color/activity_detail_tv"
                        android:textSize="@dimen/dp_15"
                        />

                    <EditText
                        android:id="@+id/send_urgency_et"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_alignParentRight="true"
                        android:background="@null"
                        android:editable="false"
                        android:singleLine="true"
                        android:text="紧急"
                        android:textColor="@color/activity_detail_et_red"
                        android:textSize="@dimen/dp_15"/>
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:background="@color/activity_frist_normal_bg"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/activity_register_height"
                    android:orientation="horizontal"
                    android:paddingLeft="@dimen/dp_20"
                    android:paddingRight="@dimen/dp_20">

                    <TextView
                        android:layout_width="@dimen/detail_tv_head_width"
                        android:layout_height="wrap_content"
                        android:singleLine="true"
                        android:text="标签"
                        android:textColor="@color/activity_detail_tv"
                        android:textSize="@dimen/dp_15"
                        />

                    <EditText
                        android:id="@+id/send_tag_et"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_alignParentRight="true"
                        android:background="@null"
                        android:editable="false"
                        android:singleLine="true"
                        android:text="标签"
                        android:textColor="@color/activity_detail_et_normal"
                        android:textSize="@dimen/dp_15"/>
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:background="@color/activity_frist_normal_bg"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/activity_register_height"
                    android:paddingLeft="@dimen/dp_20"
                    android:paddingRight="@dimen/dp_20">

                    <TextView
                        android:layout_width="@dimen/detail_tv_head_width"
                        android:layout_height="wrap_content"
                        android:singleLine="true"
                        android:text="文件标题"
                        android:textColor="@color/activity_detail_tv"
                        android:textSize="@dimen/dp_15"
                        />

                    <EditText
                        android:id="@+id/send_title_et"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_alignParentRight="true"
                        android:background="@null"
                        android:editable="false"
                        android:singleLine="true"
                        android:text="标题"
                        android:textColor="@color/activity_detail_et_normal"
                        android:textSize="@dimen/dp_15"/>
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:background="@color/activity_frist_normal_bg"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:paddingBottom="@dimen/dp_15"
                    android:paddingLeft="@dimen/dp_20"
                    android:paddingRight="@dimen/dp_20"
                    android:paddingTop="@dimen/dp_15">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:singleLine="true"
                        android:text="文件背景材料"
                        android:textColor="@color/activity_detail_tv"
                        android:textSize="@dimen/dp_15"
                        />

                    <EditText
                        android:id="@+id/send_bg_et"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_alignParentRight="true"
                        android:layout_marginTop="@dimen/dp_15"
                        android:autoLink="all"
                        android:background="@null"
                        android:editable="false"
                        android:singleLine="true"
                        android:text="标题"
                        android:textColor="@color/activity_detail_et_bule"
                        android:textSize="@dimen/dp_15"/>
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:background="@color/activity_frist_normal_bg"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/activity_register_height"
                    android:paddingLeft="@dimen/dp_20"
                    android:paddingRight="@dimen/dp_20">

                    <TextView
                        android:layout_width="@dimen/detail_tv_head_width"
                        android:layout_height="wrap_content"
                        android:singleLine="true"
                        android:text="主送单位"
                        android:textColor="@color/activity_detail_tv"
                        android:textSize="@dimen/dp_15"
                        />

                    <EditText
                        android:id="@+id/send_mainsend_et"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_alignParentRight="true"
                        android:background="@null"
                        android:editable="false"
                        android:singleLine="true"
                        android:text="标题"
                        android:textColor="@color/activity_detail_et_normal"
                        android:textSize="@dimen/dp_15"/>
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:background="@color/activity_frist_normal_bg"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/activity_register_height"
                    android:paddingLeft="@dimen/dp_20"
                    android:paddingRight="@dimen/dp_20">

                    <TextView
                        android:layout_width="@dimen/detail_tv_head_width"
                        android:layout_height="wrap_content"
                        android:singleLine="true"
                        android:text="抄送单位"
                        android:textColor="@color/activity_detail_tv"
                        android:textSize="@dimen/dp_15"
                        />

                    <EditText
                        android:id="@+id/send_copysend_et"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_alignParentRight="true"
                        android:background="@null"
                        android:editable="false"
                        android:singleLine="true"
                        android:text="标题"
                        android:textColor="@color/activity_detail_et_normal"
                        android:textSize="@dimen/dp_15"/>
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:background="@color/activity_frist_normal_bg"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:id="@+id/send_opinion_et_ly"
                >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:paddingBottom="@dimen/dp_15"
                    android:paddingLeft="@dimen/dp_20"
                    android:paddingRight="@dimen/dp_20"
                    android:paddingTop="@dimen/dp_15">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:singleLine="true"
                        android:text="XXX意见"
                        android:textColor="@color/activity_detail_tv"
                        android:textSize="@dimen/dp_15"
                        />

                    <EditText
                        android:id="@+id/send_opinion_et"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_alignParentRight="true"
                        android:layout_marginTop="@dimen/dp_15"
                        android:background="@null"
                        android:editable="false"
                        android:text="意见意见意见意见意见意见意见意见意见意见意见意见意见意见意见意见意见意见意见意见意见意见意见意见意见意见"
                        android:textColor="@color/activity_detail_et_normal"
                        android:textSize="@dimen/dp_15"/>
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/dp_5">
                        <TextView
                            android:id="@+id/send_opinion_name_tv"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/activity_text_item"
                            android:textSize="@dimen/normalTextSize"
                            android:text="张小明"
                            android:layout_toLeftOf="@+id/send_opinion_date_tv"
                            android:layout_marginRight="@dimen/dp_10"/>
                        <TextView
                            android:id="@+id/send_opinion_date_tv"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/activity_text_item"
                            android:textSize="@dimen/normalTextSize"
                            android:text="2018-02-02"
                            android:layout_alignParentRight="true"/>
                    </RelativeLayout>
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:background="@color/activity_frist_normal_bg"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:id="@+id/send_opinion2_et_ly"
                >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:paddingBottom="@dimen/dp_15"
                    android:paddingLeft="@dimen/dp_20"
                    android:paddingRight="@dimen/dp_20"
                    android:paddingTop="@dimen/dp_15">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:singleLine="true"
                        android:text="XXX意见"
                        android:textColor="@color/activity_detail_tv"
                        android:textSize="@dimen/dp_15"
                        />

                    <EditText
                        android:id="@+id/send_opinion2_et"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_alignParentRight="true"
                        android:layout_marginTop="@dimen/dp_15"
                        android:background="@null"
                        android:editable="false"
                        android:text="意见意见意见意见意见意见意见意见意见意见意见意见意见意见意见意见意见意见意见意见意见意见意见意见意见意见"
                        android:textColor="@color/activity_detail_et_normal"
                        android:textSize="@dimen/dp_15"/>
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/dp_5">
                        <TextView
                            android:id="@+id/send_opinion2_name_tv"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/activity_text_item"
                            android:textSize="@dimen/normalTextSize"
                            android:text="张小明"
                            android:layout_toLeftOf="@+id/send_opinion2_date_tv"
                            android:layout_marginRight="@dimen/dp_10"/>
                        <TextView
                            android:id="@+id/send_opinion2_date_tv"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/activity_text_item"
                            android:textSize="@dimen/normalTextSize"
                            android:text="2018-02-02"
                            android:layout_alignParentRight="true"/>
                    </RelativeLayout>
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:background="@color/activity_frist_normal_bg"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:paddingBottom="@dimen/dp_15"
                    android:paddingLeft="@dimen/dp_20"
                    android:paddingRight="@dimen/dp_20"
                    android:paddingTop="@dimen/dp_15">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:singleLine="true"
                        android:text="审核意见"
                        android:textColor="@color/activity_detail_tv"
                        android:textSize="@dimen/dp_15"
                        />

                    <EditText
                        android:id="@+id/send_audit_et"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_marginTop="@dimen/dp_15"
                        android:background="@drawable/register_name_et_reck"
                        android:gravity="top"
                        android:hint="请填写审核意见"
                        android:minHeight="100dp"
                        android:padding="@dimen/dp_10"
                        android:singleLine="false"
                        android:textColor="@color/activity_detail_et_normal"
                        android:textColorHint="@color/activity_detail_tv"
                        android:textSize="@dimen/dp_15"/>
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:background="@color/activity_frist_normal_bg"/>
            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="65dp"
                android:background="@color/activity_frist_normal_bg"
                android:orientation="horizontal"
                android:paddingBottom="@dimen/dp_20"
                android:paddingLeft="@dimen/dp_15"
                android:paddingRight="@dimen/dp_15"
                android:paddingTop="@dimen/dp_10">

                <TextView
                    android:id="@+id/send_save_btn"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_alignParentBottom="true"
                    android:layout_marginLeft="@dimen/dp_5"
                    android:layout_marginRight="@dimen/dp_5"
                    android:layout_weight="1"
                    android:background="@drawable/login_submit_bg"
                    android:gravity="center"
                    android:text="保存草稿"
                    android:textColor="@color/white"
                    android:textSize="@dimen/normalTextSize"
                    />

                <TextView
                    android:id="@+id/send_submit_btn"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_alignParentBottom="true"
                    android:layout_marginLeft="@dimen/dp_5"
                    android:layout_marginRight="@dimen/dp_5"
                    android:layout_weight="1"
                    android:background="@drawable/login_submit_bg"
                    android:gravity="center"
                    android:text="提交"
                    android:textColor="@color/white"
                    android:textSize="@dimen/normalTextSize"
                    />

                <TextView
                    android:id="@+id/send_reset_btn"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_alignParentBottom="true"
                    android:layout_marginLeft="@dimen/dp_5"

                    android:layout_marginRight="@dimen/dp_5"
                    android:layout_weight="1"
                    android:background="@drawable/login_submit_bg"
                    android:gravity="center"
                    android:text="重置"
                    android:textColor="@color/white"
                    android:textSize="@dimen/normalTextSize"
                    />

            </LinearLayout>


        </LinearLayout>
    </ScrollView>
</RelativeLayout>