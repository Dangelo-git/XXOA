<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:id="@+id/multiselect_listview_layout"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/schadule_calender_bgcolor"
    >

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:padding="@dimen/dp_10"
        >

        <LinearLayout
            android:id="@+id/main_layout"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:background="@drawable/back_reck"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="40dp"
                android:layout_marginLeft="5dp"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:padding="10dp">

                <ImageView
                    android:layout_width="4dp"
                    android:layout_height="match_parent"
                    android:layout_marginBottom="3dp"
                    android:layout_marginTop="3dp"
                    android:background="@color/activity_text_blue"/>

                <TextView
                    android:id="@+id/unfinished_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/main_layout"
                    android:layout_marginLeft="5dp"
                    android:singleLine="true"
                    android:text="待办事项"
                    android:textColor="@color/activity_text_blue"
                    android:textSize="@dimen/dp_15"/>
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="@color/activity_text_grey"/>

            <LinearLayout
                android:id="@+id/unfinished_layout"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:orientation="horizontal"
                android:paddingTop="@dimen/dp_10">

                <RelativeLayout
                    android:id="@+id/send_unfinished_layout"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:layout_weight="1"
                    >

                    <ImageView
                        android:id="@+id/send_unfinished_iv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:src="@drawable/nav1"/>

                    <TextView
                        android:id="@+id/send_unfinished_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/send_unfinished_iv"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="10dp"
                        android:background="@drawable/back_reck_press"
                        android:paddingBottom="2dp"
                        android:paddingLeft="10dp"
                        android:paddingRight="10dp"
                        android:paddingTop="2dp"
                        android:singleLine="true"
                        android:text="发文代办"
                        android:textColor="@color/white"
                        android:textSize="@dimen/dp_15"/>

                    <TextView
                        android:id="@+id/send_unfinished_num_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignRight="@+id/send_unfinished_iv"
                        android:background="@drawable/list_dot"
                        android:singleLine="true"
                        android:text="12"
                        android:textColor="@color/white"
                        android:textSize="@dimen/dp_12"
                        />
                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/receive_unfinished_layout"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:layout_weight="1"
                    >

                    <ImageView
                        android:id="@+id/receive_unfinished_iv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:src="@drawable/nav1"/>

                    <TextView
                        android:id="@+id/receive_unfinished_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/receive_unfinished_iv"
                        android:layout_centerHorizontal="true"
                        android:layout_marginBottom="10dp"
                        android:layout_marginTop="10dp"
                        android:background="@drawable/back_reck_press"
                        android:paddingBottom="2dp"
                        android:paddingLeft="10dp"
                        android:paddingRight="10dp"
                        android:paddingTop="2dp"
                        android:singleLine="true"
                        android:text="发文代办"
                        android:textColor="@color/white"
                        android:textSize="@dimen/dp_15"/>

                    <TextView
                        android:id="@+id/receive_unfinished_num_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignRight="@+id/receive_unfinished_iv"
                        android:background="@drawable/list_dot"
                        android:singleLine="true"
                        android:text="12"
                        android:textColor="@color/white"
                        android:textSize="@dimen/dp_12"/>
                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/meet_unfinished_layout"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:layout_weight="1"
                    >

                    <ImageView
                        android:id="@+id/meet_unfinished_iv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:src="@drawable/nav1"/>

                    <TextView
                        android:id="@+id/meet_unfinished_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/meet_unfinished_iv"
                        android:layout_centerHorizontal="true"
                        android:layout_marginBottom="10dp"
                        android:layout_marginTop="10dp"
                        android:background="@drawable/back_reck_press"
                        android:paddingBottom="2dp"
                        android:paddingLeft="10dp"
                        android:paddingRight="10dp"
                        android:paddingTop="2dp"
                        android:singleLine="true"
                        android:text="发文代办"
                        android:textColor="@color/white"
                        android:textSize="@dimen/dp_15"/>

                    <TextView
                        android:id="@+id/meet_unfinished_num_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignRight="@+id/meet_unfinished_iv"
                        android:background="@drawable/list_dot"
                        android:singleLine="true"
                        android:text="12"
                        android:textColor="@color/white"
                        android:textSize="@dimen/dp_12"/>
                </RelativeLayout>
            </LinearLayout>

        </LinearLayout>



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/main_layout"
            android:layout_marginTop="@dimen/dp_10"
            android:background="@drawable/back_reck"
            android:gravity="center_vertical"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/new_text_ly"
                android:layout_width="fill_parent"
                android:layout_height="40dp"
                android:layout_marginLeft="5dp"
                android:orientation="horizontal"
                android:padding="10dp">

                <ImageView
                    android:layout_width="4dp"
                    android:layout_height="match_parent"
                    android:layout_marginBottom="3dp"
                    android:layout_marginTop="3dp"
                    android:background="@color/activity_text_blue"/>

                <TextView
                    android:id="@+id/new_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/main_layout"
                    android:layout_marginLeft="5dp"
                    android:singleLine="true"
                    android:text="通知公告"
                    android:textColor="@color/activity_text_blue"
                    android:textSize="@dimen/dp_15"/>
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="@color/activity_text_grey"/>

            <ListView
                android:id="@+id/frist_news_list"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/new_text_ly"
                android:background="@color/no_color"
                android:cacheColorHint="#00000000"
                android:divider="@color/news_list_dividercolor"
                android:dividerHeight="1.0px"
                android:drawSelectorOnTop="false"
                android:fastScrollEnabled="true"
                android:listSelector="#00000000"
                />
            <RelativeLayout
                android:id="@+id/frist_nolist_layout"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/schedule_nolist_bg"
                android:visibility="gone">
            </RelativeLayout>
        </LinearLayout>


    </RelativeLayout>
</RelativeLayout>