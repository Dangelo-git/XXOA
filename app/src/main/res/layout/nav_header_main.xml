<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="220dp"
            android:gravity="center"
            android:orientation="vertical"
            android:paddingLeft="@dimen/dp_22"
            android:paddingRight="@dimen/dp_20"
            android:paddingTop="@dimen/dp_10"
            >

            <ImageView
                android:id="@+id/heads"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/side_heads_normal"/>

            <TextView
                android:id="@+id/name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingBottom="@dimen/dp_10"
                android:text="上午好,张小明！"
                android:textColor="@color/sideblack"
                android:textSize="@dimen/bigTextSize"
                android:textStyle="bold"
                />

            <TextView
                android:id="@+id/weather"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingTop="@dimen/dp_10"
                android:text="2016年11月11日 星期二"
                android:textColor="@color/tabgrey"
                android:textSize="@dimen/normalTextSize"
                />
        </LinearLayout>
        <View
            android:layout_width="wrap_content"
            android:layout_height="1px"
            android:layout_alignParentBottom="true"
            android:background="@color/news_list_dividercolor"/>

        <RelativeLayout
            android:id="@+id/setting_download_layout"
            style="@style/SettingItemLayoutStyle"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/setting_item_height"
            android:layout_weight="1"
            android:background="@color/white"
            android:visibility="gone"
            >

            <ImageView
                android:id="@+id/setting_download_arr"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/dp_5"
                android:layout_marginRight="@dimen/dp_20"
                android:background="@drawable/login_location_arr_img"/>

            <TextView
                android:id="@+id/setting_download_num"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/dp_20"
                android:layout_toLeftOf="@+id/setting_download_arr"
                android:text="1"
                android:textColor="@color/news_list_dividercolor"
                android:textSize="@dimen/dp_18"/>

            <TextView
                android:id="@+id/setting_download_words"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/dp_20"
                android:text="下载内容"
                android:textColor="@color/waterfall_item_textcolor"
                android:textSize="@dimen/dp_18">
            </TextView>


            <View
                android:layout_width="wrap_content"
                android:layout_height="1px"
                android:layout_alignParentBottom="true"
                android:background="@color/news_list_dividercolor"/>
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/setting_clean_layout"
            style="@style/SettingItemLayoutStyle"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/setting_item_height"
            android:layout_weight="1"
            android:background="@color/white"
            >

            <ImageView
                android:id="@+id/setting_clean_arr"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:paddingLeft="@dimen/dp_10"
                android:paddingRight="@dimen/dp_20"
                android:src="@drawable/side_refresh"/>

            <TextView
                android:id="@+id/setting_clean_words"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/dp_20"
                android:text="清除缓存"
                android:textColor="@color/sidegrey"
                android:textSize="@dimen/bigTextSize">
            </TextView>

            <TextView
                android:id="@+id/setting_clean"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toLeftOf="@+id/setting_clean_arr"
                android:text="53.0M"
                android:textColor="@color/news_list_dividercolor"
                android:textSize="@dimen/bigTextSize">
            </TextView>

            <View
                android:layout_width="wrap_content"
                android:layout_height="1px"
                android:layout_alignParentBottom="true"
                android:background="@color/news_list_dividercolor"/>
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/setting_updatepwd_layout"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/setting_item_height"
            android:background="@color/white"
            android:visibility="gone"
            >

            <ImageView
                android:id="@+id/setting_updatepwd_arr"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/dp_5"
                android:layout_marginRight="@dimen/dp_20"
                android:background="@drawable/login_location_arr_img"/>

            <TextView
                android:id="@+id/setting_updatepwd_words"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/dp_20"
                android:text="修改密码"
                android:textColor="@color/waterfall_item_textcolor"
                android:textSize="@dimen/dp_18">
            </TextView>


            <View
                android:layout_width="wrap_content"
                android:layout_height="1px"
                android:layout_alignParentBottom="true"
                android:background="@color/news_list_dividercolor"/>
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/setting_check_update_layout"
            style="@style/SettingItemLayoutStyle"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/setting_item_height"
            android:layout_weight="1"
            android:background="@color/white"
            >


            <ImageView
                android:id="@+id/setting_check_update_arr"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/dp_5"
                android:layout_marginRight="@dimen/dp_20"
                android:background="@drawable/login_location_arr_img"/>

            <TextView
                android:id="@+id/setting_check_update_words"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/dp_20"
                android:text="关于版本"
                android:textColor="@color/sidegrey"
                android:textSize="@dimen/bigTextSize">
            </TextView>

            <TextView
                android:id="@+id/setting_check_update"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toLeftOf="@+id/setting_check_update_arr"
                android:text="已是最新版本"
                android:textColor="@color/news_list_dividercolor"
                android:textSize="@dimen/bigTextSize">
            </TextView>

            <View
                android:layout_width="wrap_content"
                android:layout_height="1px"
                android:layout_alignParentBottom="true"
                android:background="@color/news_list_dividercolor"/>
        </RelativeLayout>

        <TextView
            android:id="@+id/setting_logout_btn"
            android:layout_width="wrap_content"
            android:layout_height="45dp"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="@dimen/dp_15"
            android:layout_marginLeft="@dimen/activity_horizontal_margin"
            android:layout_marginRight="@dimen/activity_horizontal_margin"
            android:layout_marginTop="@dimen/dp_30"
            android:background="@drawable/login_submit_bg"
            android:gravity="center"
            android:text="退出登录"
            android:textColor="@color/white"
            android:textSize="@dimen/normalTextSize"/>
    </LinearLayout>

    <ImageView
        android:id="@+id/side_close"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:layout_marginRight="@dimen/dp_20"
        android:layout_marginTop="20dp"
        android:src="@drawable/side_close"
        android:visibility="gone"
        />
</RelativeLayout>