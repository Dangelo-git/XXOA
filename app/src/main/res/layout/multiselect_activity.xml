<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginTop="@dimen/common_150"
    android:background="@color/white"
    android:paddingLeft="@dimen/common_20"
    android:paddingBottom="@dimen/common_20"
    android:paddingRight="@dimen/common_20">

    <ScrollView
        android:id="@+id/multiselect_listview_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/rl5" >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"

            android:paddingLeft="8dp"
            android:paddingRight="8dp" >

            <ListView
                android:id="@+id/multiselect_listview"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_marginTop="2dp"
                android:background="@color/white"
                android:cacheColorHint="#00000000"
                android:listSelector="@android:color/transparent"
                android:divider="@color/news_list_dividercolor"
                android:dividerHeight="1sp" >
            </ListView>
        </RelativeLayout>
    </ScrollView>

    <RelativeLayout
        android:id="@+id/rl5"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"

        >

        <LinearLayout
            android:id="@+id/multiselect_allselect_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:paddingLeft="@dimen/dp_10"
            android:orientation="horizontal" >

            <ImageView
                android:id="@+id/multiselect_allselect_icon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dip"
                android:layout_gravity="center_vertical"
                android:background="@drawable/shop_car_noselect_bg" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:singleLine="true"
                android:text="全选"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textColor="@color/waterfall_item_paletextcolor"
                android:textSize="@dimen/dp_20" />
        </LinearLayout>


        <TextView
            android:id="@+id/multiselect_activity_cancelBtn"
            android:layout_width="80dp"
            android:layout_height="30dp"
            android:layout_marginRight="10dip"
            android:layout_marginLeft="20dp"
            android:layout_toRightOf="@+id/multiselect_allselect_layout"
            android:background="@drawable/login_submit_bg"
            android:text="取消"
            android:textColor="@color/white"
            android:layout_centerVertical="true"
            android:textSize="@dimen/normalTextSize"
            android:gravity="center"
            />
        <TextView
            android:id="@+id/multiselect_activity_confirmBtn"
            android:layout_width="80dp"
            android:layout_height="30dp"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:background="@drawable/login_submit_bg"
            android:text="确定"
            android:textColor="@color/white"
            android:textSize="@dimen/normalTextSize"
            android:gravity="center"/>
    </RelativeLayout>

</RelativeLayout>