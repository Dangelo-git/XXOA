<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/mulitselectlist_item_layout">

        <LinearLayout
            android:id="@+id/mulitselectlist_item_selcet_layout"
            android:layout_width="50dp"
            android:layout_height="match_parent"
            android:layout_alignBottom="@+id/mulitselectlist_item_info_layout"
            android:gravity="center"
            android:orientation="horizontal" >

            <ImageView
                android:id="@+id/mulitselectlist_item_selcet_icon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:background="@drawable/shop_car_noselect_bg" />
        </LinearLayout>

        <RelativeLayout
            android:id="@+id/mulitselectlist_item_info_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/mulitselectlist_item_selcet_layout"
            android:paddingBottom="7dp"
            android:paddingLeft="5dip"
            android:paddingRight="5dip" >



            <TextView
                android:id="@+id/mulitselectlist_item_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="10dp"
                android:layout_centerVertical="true"
                android:text="foodname"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textColor="@color/black" />

            <TextView
                android:id="@+id/mulitselectlist_item_code"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_alignParentTop="true"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:singleLine="true"
                android:text="name"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textColor="@color/red"
                />

            <TextView
                android:id="@+id/mulitselectlist_item_num"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_below="@+id/mulitselectlist_item_code"
                android:layout_marginLeft="10dp"
                android:singleLine="true"
                android:text="name"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textColor="@color/black" />
        </RelativeLayout>


    </RelativeLayout>

</LinearLayout>