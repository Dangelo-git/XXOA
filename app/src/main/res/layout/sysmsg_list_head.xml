<?xml version="1.0" encoding="utf-8"?>

    <RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/sysmsg_news_layout"
        android:layout_width="match_parent"
        android:minHeight="55dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@color/sysmsg_news_color">
        <!--活动列表item布局-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_centerVertical="true"
            android:orientation="horizontal"
            android:layout_marginLeft="@dimen/dp_12">

            <ImageView
                android:id="@+id/sysmsg_news_iv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:scaleType="centerCrop"
                android:src="@drawable/sysmsg_gift"
                />

            <TextView
                android:id="@+id/sysmsg_news_tx"
                style="@style/MyTextStyle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginLeft="@dimen/dp_12"
                android:gravity="start|center_vertical"
                android:text="最新活动"
                android:textSize="@dimen/middleTextSize"
                android:textColor="@color/activity_text_blue"/>

        </LinearLayout>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/dp_15"
            android:src="@drawable/arrow_right"
            />

    </RelativeLayout>