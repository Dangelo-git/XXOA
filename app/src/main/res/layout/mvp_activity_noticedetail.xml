<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/activity_frist_normal_bg"
                android:orientation="vertical">

    <include
        android:id="@+id/toolbar"
        layout="@layout/toolbar_new"
        />


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/toolbar"
        android:orientation="vertical"
        >

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:background="@color/white"
            >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">


                <LinearLayout
                    android:id="@+id/noticedetail_title_layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/white"
                    android:orientation="vertical"
                    android:paddingBottom="@dimen/dp_10"
                    android:paddingTop="@dimen/dp_15">


                        <TextView
                            android:layout_height="wrap_content"
                            android:layout_width="match_parent"
                            android:singleLine="true"
                            android:text="收文时间"
                            android:gravity="center"
                            android:textColor="@color/activity_detail_et_normal"
                            android:textSize="@dimen/dp_18"
                            android:id="@+id/noticereceive_title_tv"
                            />

                        <TextView
                            android:id="@+id/noticereceive_time_tv"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="@null"
                            android:gravity="center"
                            android:singleLine="true"
                            android:text="2018-04-15"
                            android:layout_marginTop="@dimen/dp_5"
                            android:textColor="@color/activity_detail_tv"
                            android:textSize="@dimen/dp_15"/>
                    </LinearLayout>

                  <View
                      android:layout_width="match_parent"
                      android:layout_height="@dimen/dp_10"
                      android:background="@color/activity_frist_normal_bg"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@color/white"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal"
                        android:paddingLeft="@dimen/dp_20"
                        android:paddingRight="@dimen/dp_20"
                        android:paddingTop="@dimen/dp_15">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:text="收文单位收文单位收文单位收文单位收文单位收文单位收文单位收文单位收文单位收文单位收文单位收文单位收文单位收文单位收文单位收文单位收文单位收文单位收文单位收文单位收文单位收文单位收文单位收文单位收文单位收文单位收文单位"
                            android:textColor="@color/activity_detail_et_normal"
                            android:textSize="@dimen/dp_15"
                            android:id="@+id/noticereceive_content_tv"
                            />


                    </LinearLayout>


                </LinearLayout>
            </LinearLayout>
        </ScrollView>




        <LinearLayout
            android:id="@+id/receive_reset_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:background="@color/activity_frist_normal_bg"
            android:orientation="horizontal"
            >

            <TextView
                android:id="@+id/notice_share_btn"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_alignParentBottom="true"
                android:layout_weight="1"
                android:background="@drawable/share_btn_bg"
                android:gravity="center"
                android:text="分发到个人知识库"
                android:textColor="@color/white"
                android:textSize="@dimen/normalTextSize"
                />

        </LinearLayout>


    </RelativeLayout>
</RelativeLayout>